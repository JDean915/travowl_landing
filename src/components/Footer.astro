---
import Picture from "astro/components/Picture.astro";
import Container from "./Container.astro";
import SvgLibrary from "./SvgLibrary.astro";
import logo from "./../assets/logo.png";

const currentYear = new Date().getFullYear();
---

<footer class="bg-offwhite/80 overflow-hidden">
  <Container>
    <div
      class="flex flex-col gap-12 py-16 sm:flex-row sm:justify-between md:gap-0 md:pt-20 xl:pt-24"
    >
      <div class="max-w-md">
        <a
          href="/"
          aria-label="Home"
          class="group mb-4 flex items-center lg:mb-8"
        >
          <div
            class="mr-3 h-6 w-6 overflow-hidden rounded-sm bg-white p-1.5 duration-500 group-hover:bg-black sm:h-9 sm:w-9 lg:h-14 lg:w-14"
          >
            <Picture
              src={logo}
              formats={["avif", "webp"]}
              alt="Travowl Logo"
              loading="lazy"
              class="h-full w-full object-contain transition duration-800 group-hover:contrast-200"
            />
          </div>
          <span
            class="self-center from-black to-orange-600 to-50% text-3xl font-bold tracking-tight whitespace-nowrap italic duration-300 group-hover:inline-block group-hover:bg-linear-to-t group-hover:bg-clip-text group-hover:text-transparent sm:text-4xl lg:text-5xl"
            >Travowl</span
          >
        </a>
        <p class="text-gray-600 sm:text-lg">
          Personal travel companion for organizing vacations, managing
          excursions, and creating memories.
        </p>
      </div>

      <div class="flex flex-col gap-8 lg:flex-row lg:gap-16">
        <div>
          <h3
            class="mb-4 font-mono text-lg font-semibold tracking-tight text-black uppercase underline decoration-2 underline-offset-3"
          >
            Quick Links
          </h3>
          <ul class="space-y-3">
            <li>
              <a href="/" class="duration-300 hover:text-orange-600">About Us</a
              >
            </li>
            <li>
              <a href="/" class="duration-300 hover:text-orange-600">Our Team</a
              >
            </li>
            <li>
              <a href="/" class="duration-300 hover:text-orange-600">Careers</a>
            </li>
            <li>
              <a href="/" class="duration-300 hover:text-orange-600">Contact</a>
            </li>
          </ul>
        </div>

        <div>
          <h3
            class="mb-4 font-mono text-lg font-semibold tracking-tight text-black uppercase underline decoration-2 underline-offset-3"
          >
            Contact Information
          </h3>
          <ul class="space-y-4">
            <li class="group flex flex-row items-center gap-3">
              <SvgLibrary
                iconName="Send"
                class="h-5 w-5 shrink-0 rotate-90 transition-[colors,translate,rotate] duration-[3s,2s,1s] group-hover:translate-x-160 group-hover:-translate-y-25 group-hover:rotate-120 group-hover:text-orange-600"
              />
              <a
                href="mailto:info@travowl.com"
                class="duration-300 group-hover:text-orange-600"
                >info@travowl.com</a
              >
            </li>
            <li class="group flex flex-row items-center gap-3">
              <SvgLibrary
                iconName="Call"
                class="h-5 w-5 shrink-0 transition-[colors,translate,rotate] duration-[3s,1s,1s] group-hover:translate-x-1 group-hover:-translate-y-1 group-hover:rotate-25 group-hover:text-orange-600"
              />
              <a
                href="tel:+19158234245"
                class="duration-300 group-hover:text-orange-600"
                >(123) 456-7891</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="border-t-4 border-double border-black py-6">
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-center">
        <div class="flex justify-center lg:justify-start">
          <p class="text-sm text-gray-600">
            &copy; {currentYear} Travowl. Version 1.0.
          </p>
        </div>

        <div class="flex justify-center gap-6">
          <a
            href="/"
            class="text-sm text-gray-600 duration-300 hover:text-orange-600"
            >Privacy Policy</a
          >
          <a
            href="/"
            class="text-sm text-gray-600 duration-300 hover:text-orange-600"
            >Terms of Service</a
          >
          <a
            href="/"
            class="text-sm text-gray-600 duration-300 hover:text-orange-600"
            >More Info</a
          >
        </div>

        <div class="flex justify-center gap-4 lg:justify-end">
          <a
            href="/"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-black text-white transition-all duration-300 hover:bg-orange-600 hover:shadow-lg"
            aria-label="Follow us on Twitter"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
              ></path>
            </svg>
          </a>
          <a
            href="/"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-black text-white transition-all duration-300 hover:bg-orange-600 hover:shadow-lg"
            aria-label="Follow us on LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </Container>
</footer>
