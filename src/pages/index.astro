---
import Layout from "../layouts/Layout.astro";
import background from "../assets/background.svg";
import phone from "./../assets/phonepreview.png";
import Picture from "astro/components/Picture.astro";
import Container from "../components/Container.astro";
---

<Layout
  title="Travowl | Offline Travel Manager"
  description="Plan, Track, and Remember Every Adventure"
>
  <section class="bg-offwhite/80">
    <Container>
      <div class="py-8 sm:py-16">
        <div class="text-center">
          <div>
            <h2
              class="mx-auto text-3xl leading-tight font-extrabold tracking-tight text-gray-900 italic sm:text-5xl md:max-w-3xl lg:max-w-4xl lg:text-6xl"
            >
              Plan, Track, and Remember <span class="text-orange-600"
                >Every</span
              > Adventure
            </h2>
            <p
              class="mt-4 text-base font-normal text-gray-600 sm:text-xl md:mx-auto md:max-w-3xl"
            >
              Your personal travel companion for organizing vacations, managing
              excursions, and creating lasting memories. All stored securely on
              your device.
            </p>
          </div>

          <div
            class="mx-auto mt-8 max-w-2xl items-center justify-center space-y-4 p-4 sm:mt-16 sm:flex sm:space-y-0 sm:space-x-8"
          >
            <a
              href={`${import.meta.env.BASE_URL}/downloads/travowl-v1.0.apk`}
              download="travowl-v1.0.apk"
              class="font-headings inline-flex w-full items-center justify-center rounded-lg bg-black px-8 py-3 text-center text-base font-medium text-white duration-300 hover:bg-orange-600 focus:ring-4 focus:ring-orange-400 sm:w-auto sm:text-lg"
            >
              <svg
                class="mr-2 -ml-1 h-4 w-4 sm:h-6 sm:w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                ></path></svg
              >
              Download
            </a>
            <div class="flex flex-col items-center justify-center">
              <div class="flex items-center gap-1.5">
                <div class="flex items-center gap-0.5">
                  <svg
                    aria-hidden="true"
                    class="h-5 w-5 text-orange-600"
                    xmlns="http://www.w3.org/2000/svg"
